<li class="btn-group">
  
  <button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
    <span><%= t("simple_form.labels.defaults.action") %></span> <i class="fa fa-angle-down"></i>
  </button>
  <ul class="dropdown-menu pull-right" role="menu">
      <li>
        <%= link_to financor.edit_invoice_path(invoice) do %>
          <i class="fa fa-edit"></i><%= t("simple_form.helpers.defaults.edit") %>
        <% end %>
      </li>
      <li>
        <%= link_to financor.preview_invoice_path(invoice), target: "_blank" do %>
          <i class="fa fa-eye"></i> <%= t("simple_form.helpers.defaults.preview") %>
        <% end %>
      </li>
      <li class="divider"></li>
      <li>
        <%= link_to financor.invoice_path(invoice), :method => :delete, :data => {:confirm => t("simple_form.messages.defaults.destroy_confirm")} do %>
          <i class="fa fa-remove"></i><%= t("simple_form.helpers.defaults.cancel") %>
        <% end %>
      </li>
  </ul>
</li>