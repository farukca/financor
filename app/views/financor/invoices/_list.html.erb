<div class="row">
	<div class="col-xs-12">
	  <div class="table-responsive" id="invoices_list_div">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th><%= t("invoices.label.name") %></th>
						<th class="hidden-480"><%= t("invoices.label.invoice_date") %></th>
						<th class="hidden-480"><%= t("invoices.label.company") %></th>
						<th class="hidden-480"><%= t("invoices.label.debit_credit") %></th>
						<th><%= t("invoices.label.invoice_amount") %></th>
						<th><%= t("invoices.label.curr") %></th>
					</tr>
				</thead>
				<tbody>
					<% @invoices.each do |invoice| %>
					  <tr>
							<td>
								#
							</td>
							<td><%= link_to invoice.name, financor.invoice_path(invoice) %></td>
							<td><%= invoice.invoice_date %></td>
							<td><%= link_to company_name(invoice.company), network.company_path(invoice.company) %></td>
							<td><%= t("invoices.debit_credit_types.#{invoice.debit_credit}") %></td>
							<td><%= invoice.invoice_amount %></td>
							<td><%= invoice.curr %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<% if @invoices.respond_to? :current_page %>
			  <div class: "pagination">
				  <%= paginate @invoices %>
				 </div>
			<% end %>
		</div>
	</div>
</div>