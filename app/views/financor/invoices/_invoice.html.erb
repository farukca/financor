				  <div class="row">
						<div class="col-md-4">
							<strong><%= t("involines.label.name") %></strong>
						</div>
						<div class="col-md-3">
							<strong><%= t("involines.label.unit_number") %></strong>
						</div>
						<div class="col-md-2">
							<strong><%= t("involines.label.unit_price") %></strong>
						</div>
						<div class="col-md-2">
							<strong><%= t("involines.label.total_amount") %></strong>
						</div>
