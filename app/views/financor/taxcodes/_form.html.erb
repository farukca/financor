<%= simple_form_for @taxcode, html: { class: 'form-inline' }, remote: true, validate: true do |f| %>
	<%= f.error_notification %>
	<%= f.error :base, :error_method => :to_sentence %>

  <div class="col-md-12">

    <div class="col-md-3">
      <%= f.input :name %>
    </div>
    <div class="col-md-3">
      <%= f.input :rate  %>
    </div>
    <div class="col-md-4">
      <%= f.input :code %>
    </div>
    <div class="col-md-2">
      <br><br>
      <%= f.submit t("simple_form.helpers.submit.defaults.create"), class: "btn btn-success" %>
    </div>

  </div>
<% end %>