<div id="finitems_list_div" class="table-responsive">
  <table class="table table-bordered table-hover" id="finitems_list_table">
    <thead>
      <tr>
        <th class="col-md-2"><%= t("simple_form.labels.finitem.code") %></th>
        <th class="col-md-3"><%= t("simple_form.labels.finitem.name") %></th>
        <th class="col-md-2"><%= t("simple_form.labels.finitem.sales_price") %></th>
        <th class="col-md-2"><%= t("simple_form.labels.finitem.purchase_price") %></th>
        <th class="col-md-2"><%= t("simple_form.labels.finitem.item_type") %></th>
      </tr>
    </thead>
    <tbody id="finitems_table_body">
      <% @finitems.each do |finitem| %>
        <tr id="finitem_<%= finitem.id %>_div">
          <td><%= link_to finitem.code, finitem %></td>
          <td><%= finitem.name %></td>
          <td><%= print_price(finitem.sales_price, finitem.sales_curr) if finitem.sales_price>0 %></td>
          <td><%= print_price(finitem.purchase_price, finitem.purchase_curr) if finitem.purchase_price>0 %></td>
          <td><%= t("simple_form.options.finitem.item_type.#{finitem.item_type}") %></td>
        </tr>
	    <% end %>
	  </tbody>
  </table>

  <% if @finitems.respond_to? :current_page %>
    <ul class="pagination">
      <%= paginate @finitems, remote: true %>
    </ul>
  <% end %>
</div>