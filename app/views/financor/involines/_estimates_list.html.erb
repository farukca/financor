<div id="estimate_involines_list_div" class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="estimate_involines_list_table">
	  <thead>
      <tr>
        <th class="col-md-2"><%= t("simple_form.labels.involine.name") %></th>
        <th class="col-md-2"><%= t("simple_form.labels.involine.company_id") %></th>
        <th class="col-md-1"><%= t("simple_form.labels.involine.debit_credit") %></th>
        <th class="col-md-1"><%= t("simple_form.labels.involine.unit_number") %></th>
        <th class="col-md-2"><%= t("simple_form.labels.involine.unit_price") %></th>
        <th class="col-md-1"><%= t("simple_form.labels.defaults.currency") %></th>
        <th class="col-md-1">
          <%= t("simple_form.labels.involine.tax") %>
          <%= link_to financor.taxcodes_path, remote: true do %><i class="fa fa-gear"></i><% end %>
        </th>
        <th class="col-md-1"><%= t("simple_form.labels.involine.total_amount") %></th>
        <th class="col-md-1 hidden-print">#</th>
      </tr>
    </thead>
	  <tbody id="estimate_involines_table_body">
	    <%= render partial: "financor/involines/estimate", collection: objects, as: :involine %>
	  </tbody>
  </table>

  <% if objects.respond_to? :current_page %>
    <ul class="pagination">
	  <%= paginate objects, remote: true %>
	</ul>
  <% end %>
</div>